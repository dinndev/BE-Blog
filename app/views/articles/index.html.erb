<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%=article.id %></td>
      <td><h3><%=article.title %></h3></td>
      <td><%= article.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create new article", new_article_path %>
